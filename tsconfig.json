{
    "compilerOptions": {
        "jsx": "react-jsx",
        "module": "ESNext",
        "target": "ES6",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "baseUrl": "./src",
        "paths": {
            "*": ["node_modules/*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules", "build"]
}